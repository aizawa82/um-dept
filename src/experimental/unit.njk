<div x-data="{ slide: 0 }" class="relative">
  <div class="overflow-hidden">
    <div x-show="slide === 0" class="w-full h-64 bg-blue-500 flex items-center justify-center transition-all duration-500">
      <h1 class="text-white text-4xl font-bold">Slide 1</h1>
    </div>
    <div x-show="slide === 1" class="w-full h-64 bg-green-500 flex items-center justify-center transition-all duration-500">
      <h1 class="text-white text-4xl font-bold">Slide 2</h1>
    </div>
    <div x-show="slide === 2" class="w-full h-64 bg-red-500 flex items-center justify-center transition-all duration-500">
      <h1 class="text-white text-4xl font-bold">Slide 3</h1>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 w-full flex justify-center mt-4">
    <button @click="slide = slide === 0 ? 2 : slide - 1" class="mr-2 p-2 rounded-full bg-blue-500 text-white focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 transition-all duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
        <path fill-rule="evenodd" d="M15.707 17.707a1 1 0 0 1-1.414 0l-6.998-6.998a1 1 0 0 1 0-1.414l6.998-6.998a1 1 0 0 1 1.414 1.414L9.414 10l6.293 6.293a1 1 0 0 1 0 1.414z" />
      </svg>
    </button>
    <button @click="slide = slide === 2 ? 0 : slide + 1" class="p-2 rounded-full bg-blue-500 text-white focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50 transition-all duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
        <path fill-rule="evenodd" d="M8.293 6.293a1 1 0 0 1 1.414 0l6.998 6.998a1 1 0 0 1 0 1.414l-6.998 6.998a1 1 0 0 1-1.414-1.414L14.586 12 8.293 5.707a1 1 0 0 1 0-1.414z" />
      </svg>
    </button>
  </div>
</div>



