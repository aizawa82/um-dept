<section class="body-font overflow-hidden text-gray-600">
  <div class="container mx-auto px-5 py-24">
    <div class="-my-8 divide-y-2 divide-gray-100">


   
    {% for event in collections.events %}


 <div class="flex flex-wrap py-8 md:flex-nowrap">
        <div class="mb-6 flex flex-shrink-0 flex-col md:mb-0 md:w-64">
          <span class="title-font font-semibold text-gray-700">{{ event.data.category }}</span>
          <span class="text-sm text-gray-500">{{ event.data.date | readableDate}}</span>
        </div>
        <div class="md:flex-grow">
          <h2 class="title-font mb-2 text-2xl font-medium text-gray-900">{{ event.data.title }}</h2>
          <p class="leading-relaxed">{{ event.data.details }}</p>
          <a class="mt-4 inline-flex items-center text-indigo-500"
            >Learn More
            <svg class="ml-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

    {% endfor %}


    </div>
  </div>
</section>

    {% for event in collections.events %}
   <h1> {{ event.title }}</h1>
    {{ event.details }}
    {% endfor %}

