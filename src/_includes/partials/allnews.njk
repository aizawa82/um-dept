<section class="bg-gray-100 body-font text-gray-600">
  <div class="container mx-auto px-5 py-5">
    <div class="flex flex-wrap">
    {% for news in collections.news %}
      <a href="{{ news.url }}">
      <div class="p-4 md:w-1/3 flex-grow">
        <div class="h-full overflow-hidden border-2 border-gray-200 bg-white  border-opacity-60">
            <img class="hidden md:inline w-full object-contain object-center md:h-36 lg:h-48" src="/static/img/{{ news.data.image }}" />
          <div class="p-2">
            <h2 class="title-font text-base font-semibold text-gray-900">{{ news.data.title }}</h2>
            <p class="leading-relaxed text-base/6 text-sm"> {{ news.data.intro }}</p>
            <div class="flex flex-wrap items-center">
              <a class="inline-flex items-center text-{{ settings.accentcolor }} md:mb-2 lg:mb-0">Learn More
                <svg class="ml-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      </a>
      {% endfor %}
    </div>

  </div>
</section>