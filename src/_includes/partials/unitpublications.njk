{% macro unitpublications(unit, publications) %}


<section class="body-font overflow-hidden text-gray-600">
  <div class="container mx-auto px-5 py-24 max-w-4xl">
          <h1 class="title-font mb-4 text-2xl text-center font-medium tracking-widest text-gray-900">Publications</h1>

    {% for article in publications[unit]%}

    <div class="flex flex-wrap py-8 md:flex-nowrap">
      <div class="md:flex-grow">
        <h2 class="title-font mb-2 text-2xl font-medium text-gray-900">{{ article.title }}</h2>
        <p class="leading-relaxed">{{ article.authors }}</p>
        <p class="leading-relaxed font-semibold mt-4">{{ article.journal }}</p>

        <a class="mt-4 inline-flex items-center text-indigo-500" href="{{ article.url }}">Article
          <svg class="ml-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>

    {% endfor %}
  </div>
</section>

{% endmacro %}