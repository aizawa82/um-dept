<section class="bg-gray-600 body-font text-gray-600">

<div class="relative flex flex-wrap flex-col md:flex-row justify-center bg-gray-600">

      {% for news in collections.news %}
      {% if (loop.index <= 3) %}

    <a href="{{news.url }}">

  <div class="m-4 block md:w-1/4 overflow-hidden bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700">
         <a href="{{ news.url }}">

      <img
        class="hidden md:inline w-full object-cover object-top object-center md:h-36"
        src="/static/img/{{ news.data.image }}"
        alt=""
      />
    <div class="p-2">
      <h5 class="text-sm mb-0 font-light uppercase leading-tight tracking-wider text-neutral-800 dark:text-neutral-50">{{ news.data.category }}</h5>
      <h5 class="mb-2 text-sm font-bold leading-tight text-neutral-800 dark:text-neutral-50">{{ news.data.title }}</h5>
      <p class="mb-0 text-xs text-neutral-600 font-extralight dark:text-neutral-200">{{ news.data.intro }}</p>
    </div>

      </a>

  </div>

  {% endif %}
{% endfor %}   


</div>

            <div class="flex flex-wrap items-center justify-end">
              <a class="inline-flex items-center text-{{ settings.accentcolor }} mr-4 md:mb-2 lg:mb-0" href="/news">More news
                <svg class="ml-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>

</section>



