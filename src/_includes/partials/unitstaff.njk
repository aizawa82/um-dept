{% macro unitstaff(people, unit) %}

<section class="body-font text-gray-600 max-w-4xl mx-auto">
  <div class="container mx-auto px-5 py-4">
    <div class="mb-20 flex w-full flex-col text-center">
      <h1 class="title-font mb-4 text-2xl font-bold tracking-widest text-gray-900">{{ unit }} Team</h1>
    </div>
    <div class="-m-4 flex flex-wrap">

{% for person in people.people %}
{% if person.unit == unit %}


 <div class="p-4 lg:w-1/2">
        <div class="flex h-full flex-col items-center justify-center text-center sm:flex-row sm:justify-start sm:text-left">
          <img alt="{{ person.image }}" class="mb-4 h-48 w-48 flex-shrink-0 rounded-full object-fit object-center sm:mb-0" src="/static/img/portraits/{{ person.image }}"/>
          <div class="flex-grow sm:pl-8">
            <h2 class="title-font text-lg font-medium text-gray-900">{{ person.name }}</h2>
            <h3 class="mb-3 text-gray-500"> {{ person.position }}</h3>
            {% if person.interests %}
            <p class="mb-4"><span class="font-semibold">Interests:</span> {{ person.interests }}</p>
            {% endif %}
            <span class="inline-flex">
              <a class="text-gray-500">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-5 w-5" viewBox="0 0 24 24">
                  <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
                </svg>
              </a>
              <a class="ml-2 text-gray-500">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-5 w-5" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
                </svg>
              </a>
              <a class="ml-2 text-gray-500">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-5 w-5" viewBox="0 0 24 24">
                  <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                </svg>
              </a>
            </span>
            <p>
                    <a class="mt-4 inline-flex items-center text-indigo-500" href="{{ person.umexpert }}">UM Expert
          <svg class="ml-2 h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="M12 5l7 7-7 7"></path>
          </svg>
        </a>
        </p>
          </div>
        </div>
      </div>

{% endif %}
{% endfor %}

    </div>
  </div>
</section>

{% endmacro %}